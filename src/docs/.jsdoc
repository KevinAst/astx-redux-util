// NOTE: all file references are from the perspective of the project root (where the jsdoc command was issued)
{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries":     ["jsdoc"]
  },
  "source": {
    "include": [
      "./src",
//? "./package.json", // ?? NOTE: we remove this to eliminates the version number directory in the output (supporting auto deploy for GitHub pages)
      "./README.md" // ?? think this generates the content of the HOME page (index.html)
    ],
    "includePattern": ".js$"
//? "excludePattern": "index.js"
//? "excludePattern": "(node_modules|docs|dist)" // not sure WHY we need this
  },
  "plugins": [
    "plugins/markdown",
    "./node_modules/jsdoc-babel"
  ],
  "templates": {
    "cleverLinks":    true,
    "monospaceLinks": true,
    "default": {
      "includeDate":    false
    }
  },
  "opts": { // command line options here
    "destination": "./docs/",
    "encoding":    "utf8",
    "private":     true,
    "recurse":     true,
    "template":    "./node_modules/docdash",
    "tutorials":   "./src/docs"
  }
}
