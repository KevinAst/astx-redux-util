// NOTE: all file references are from the perspective of the project root (where the jsdoc command is issued)
{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries":     ["jsdoc"]
  },
  "source": {
    "include": [
      "./src",
      "./package.json", // NOTE: allows JSDoc to have access to packageInfo (enhancing footer, and packaged in project/version directory)
      "./README.md"     // ?? research: believe JSDoc generates the content of the HOME page (index.html)
    ],
    "includePattern": ".js$"
//  "excludePattern": "index.js" // just for future reference :-)
  },
  "plugins": [
    "plugins/markdown",
    "./node_modules/jsdoc-babel"
  ],
  "templates": {
    "cleverLinks":    true,
    "monospaceLinks": true,
    "default": {
      "includeDate":  false // exclude date/time from footers (minimizing resources checked in and auto-published to GitHub Pages)
    }
  },
  "opts": { // command line options here
    "destination": "./docs/",
    "encoding":    "utf8",
    "private":     true,
    "recurse":     true,
    "template":    "./node_modules/docdash",
    "tutorials":   "./UserGuide"
  }
}
